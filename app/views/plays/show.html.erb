<div class="row">
  <div class="col-md-4">
    <%= image_tag @play.play_img.url(:play_show), class: "play_show" %>
  </div>

  <div class="col-md-8">
    <div class="play-info">
      <h1><%= @play.title %></h1>
      <h3 class="play-director"><span>from  </span><%= @play.director %></h3>
      <h4 class="play-director"><%= @play.category.name %></h4>
      <p class="play-desc"><%= @play.description %></p>
    </div>
  </div>
</div>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
      <%= link_to 'Редактировать', edit_play_path(@play), class: 'btn btn-warning' %>
      <%= link_to 'Удалить', play_path(@play), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
    <% end %>
  <% end %>    
</div>