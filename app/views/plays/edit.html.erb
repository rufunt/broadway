<div class="col-md-10 col-md-offset-1">
  <div class="new-play-form">

    <h1>Редактировать постановку</h1>

        <%= simple_form_for @play, html: {multipart: true} do |f| %>
          <%= f.file_field :play_img %>
          <%= select_tag(:category_id, options_for_select(@categories || Category.all.map { |c| [ c.name, c.id ] }), :prompt => "Выбрать жанр") %>
          <%= f.input :title, label: "Постановка" %>
          <%= f.input :description %>
          <%= f.input :director %>
          <%= f.button :submit %>
        <% end %>
  </div>
</div>        